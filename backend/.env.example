# PromptHub backend (Render) environment example
# Render Web Service -> Environment Variables에 아래 키를 입력하세요.

# Django settings
DJANGO_SETTINGS_MODULE=config.settings_prod
SECRET_KEY=replace-with-a-long-random-secret
# settings_base와 settings_prod가 서로 다른 키명을 사용해서 둘 다 같은 값으로 넣는 것을 권장
DJANGO_SECRET_KEY=replace-with-a-long-random-secret
DEBUG=False
DJANGO_DEBUG=False
DJANGO_LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Render Postgres (Internal Database URL 권장)
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME

# Hosts / CORS / CSRF (쉼표로 여러 개 가능)
DJANGO_ALLOWED_HOSTS=your-backend.onrender.com
CORS_ALLOWED_ORIGINS=https://your-frontend.onrender.com
CSRF_TRUSTED_ORIGINS=https://your-frontend.onrender.com

# Cloudinary (프로필 이미지/업로드 파일 영구 저장)
# 미설정 시 로컬 파일 시스템 저장(배포 환경에서는 유실 가능)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
